<Window x:Class="MEBS_Envanter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:x1="clr-namespace:MEBS_Envanter" 
        xmlns:guihelpers="clr-namespace:MEBS_Envanter.GUIHelpers"
        x:Name="mainwin" MaxHeight="600" MinHeight="400"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        xmlns:xceedcontrols="clr-namespace:Xceed.Wpf.Controls;assembly=Xceed.Wpf.Controls"
        xmlns:converters="clr-namespace:MEBS_Envanter.Converters"
        xmlns:hardwareusercontrols ="clr-namespace:Mebs_Envanter.HardwareUserControls"
        Title="Bilgisayar Envanter Kaydı" SizeToContent="Height" Width="720" ResizeMode="CanResize">
    <Grid >
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>                    
                </ResourceDictionary.MergedDictionaries>                               
            </ResourceDictionary>
            
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"></ColumnDefinition>
            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Column="1" x:Name="pcEnvanterTabControl">
            
            <TabItem Header="Genel Bilgiler" x:Name="generalInfoTab" >
                <Border Background="LightGray" BorderThickness="2" CornerRadius="12" Margin="2" BorderBrush="LightBlue">
                    <hardwareusercontrols:GeneralInfoUserControl x:Name="generalInfoUserControl1">                        
                    </hardwareusercontrols:GeneralInfoUserControl>
                </Border>
            </TabItem>
            <TabItem Header="Donanım" x:Name="hardwareTab" >
                <Border Background="LightGray" BorderThickness="2" CornerRadius="12" BorderBrush="LightBlue">
                    <hardwareusercontrols:OemDevicesUserControl 
                    x:Name="oemDeviceUserControl1"
                    Background="Beige">
                    </hardwareusercontrols:OemDevicesUserControl>
                </Border>
            </TabItem>
            
            <TabItem Header="Monitor" x:Name="monitorTab">
                <Border Background="LightGray" BorderThickness="2" CornerRadius="24" BorderBrush="LightBlue">
                    <hardwareusercontrols:MonitorInfoUserControl x:Name="monitorUserControl1">
                        
                    </hardwareusercontrols:MonitorInfoUserControl>
                   
                </Border>
            </TabItem>
            <TabItem Header="Senet" x:Name="senetTab" >
                <Border Background="LightGray" BorderThickness="2" CornerRadius="24" BorderBrush="LightBlue">
                    <hardwareusercontrols:SenetInfoUserControl x:Name="senetInfoUserControl1">
                        
                    </hardwareusercontrols:SenetInfoUserControl>
                </Border>
            </TabItem>
            <TabItem Header="Ağ Bilgileri" x:Name="networkTab">
                <Border Background="LightGray" BorderThickness="2" CornerRadius="12" BorderBrush="LightBlue">
                    <hardwareusercontrols:NetworkInfoUserControl x:Name="networkUserControl1">
                        
                    </hardwareusercontrols:NetworkInfoUserControl>
                </Border>
            </TabItem>

        </TabControl>
        
        <Grid Margin="3"  Background="#FF6CCECE">
            <ListBox x:Name="pcList" 
                 SelectionChanged="pcList_SelectionChanged"                 
                 ItemsSource="{Binding Computers}"
                 ItemContainerStyle="{StaticResource kurulumListItemStyle}"
                 ItemTemplate="{StaticResource kurulumListboxDataTemplate}"
                 Grid.Row="1" MinHeight="120"  Background="Transparent"/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="LightGoldenrodYellow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel TextBlock.FontSize="16" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="4,0" VerticalAlignment="Center"
                        
                        Content="Ekle" Click="pcAddBtn_Click"></Button>
                <Button Margin="4,0" VerticalAlignment="Center" Content="Düzenle" 
                        IsEnabled="{Binding ElementName=pcList,Path=SelectedItem,Converter={StaticResource NullValueToBoolConverter}}"
                        Click="pcEditBtn_Click"></Button>
                <Button 
                    IsEnabled="{Binding ElementName=pcList,Path=SelectedItem,Converter={StaticResource NullValueToBoolConverter}}"
                    Margin="4,0" VerticalAlignment="Center" Content="Sil" Click="pcDeleteBtn_Click"></Button>
            </StackPanel>
            <Button Content="Yenile" Grid.Column="1" Height="23" HorizontalAlignment="Left" 
                    
                    Margin="58,11,0,0" Name="refreshListBtn" VerticalAlignment="Top" Width="350" Click="refreshListBtn_Click" />
        </Grid>

    </Grid>
</Window>
