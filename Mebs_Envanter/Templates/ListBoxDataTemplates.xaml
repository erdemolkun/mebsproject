<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="datatemplateListBoxCh">
        <Border 
                Margin="3,1,3,1" HorizontalAlignment="Stretch" Background="MintCream"                        
                        CornerRadius="12,0,12,0" BorderBrush="Orange" BorderThickness="1">
            <Border.BitmapEffect>
                <DropShadowBitmapEffect Color="Gray"/>
            </Border.BitmapEffect>
            <Grid  HorizontalAlignment="Stretch" Margin="0,6,0,6"
                            TextElement.FontSize="15" TextElement.Foreground="Red" >

                <StackPanel>
                    <TextBlock Text="PC ADI : "></TextBlock>
                    <TextBlock  Margin="0,0,2,0" Text="{Binding Pc_adi}" />
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

    <ControlTemplate TargetType="ListBoxItem" x:Key="kurulumListItemStyleSelected">
        <Grid Background="Transparent" Margin="0" Name="mainGrid">
            <Grid.BitmapEffect>
                <OuterGlowBitmapEffect GlowSize="3" GlowColor="Black" />
            </Grid.BitmapEffect>
            <Border Name="ItemBorder" CornerRadius="3" Margin="6,3"
                BorderBrush="Gray" BorderThickness="1" Background="LightSkyBlue">
                <ContentPresenter         
                    Margin="3" HorizontalAlignment="Center" />
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter TargetName="ItemBorder" Property="Background" Value="gray" />
                <Setter TargetName="ItemBorder" Property="Margin" Value="3,3" />
                <Setter TargetName="mainGrid" Property="Grid.BitmapEffect">
                    <Setter.Value>
                        <OuterGlowBitmapEffect GlowSize="3" GlowColor="Red" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="kurulumListItemStyle" TargetType="{x:Type ListBoxItem}">
        <Setter Property="Background" Value="#ffD4A4A4" />
        <Setter Property="Template" Value="{StaticResource kurulumListItemStyleSelected}" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="Padding" Value="0,0,0,0" />
        <Setter Property="ClipToBounds" Value="True" />
        <Style.Triggers>
            <Trigger Property="Selector.IsSelected" Value="True">
                <Setter Property="Template" Value="{StaticResource kurulumListItemStyleSelected}" />
            </Trigger>
        </Style.Triggers>
    </Style>




