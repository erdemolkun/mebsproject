                    <Image.Source>
                        <DrawingImage>
                            <DrawingImage.Drawing>
                                <GeometryDrawing  x:Name="_"  Geometry= "m 0,22 l 22,0">
                                    <GeometryDrawing.Pen>
                                        <Pen Brush="SkyBlue" Thickness="2" />
                                    </GeometryDrawing.Pen>
                                </GeometryDrawing>
                            </DrawingImage.Drawing>
                        </DrawingImage>
                    </Image.Source>
                </Image>
