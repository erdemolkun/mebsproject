<UserControl x:Class="Mebs_Envanter.HardwareUserControls.MonitorInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:x1="clr-namespace:MEBS_Envanter"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid  TextBlock.FontWeight="Bold">
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="12"></Setter>
                <Setter Property="Foreground" Value="black"></Setter>
                <Setter Property="MaxHeight" Value="20"></Setter>
                <Setter Property="Margin" Value="5"></Setter>
            </Style>
            
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Marka"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Tipi"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" Text="Stok No"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="3" Text="Seri No"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="4" Text="Parça No"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="5" Text="Tempest Seviyesi"></TextBlock>

        <ComboBox x:Name="monitorMarkalarCombo" MinWidth="80" VerticalAlignment="Center"  Margin="2,2"
                                   SelectedIndex="{Binding Marka,
                                   Converter ={StaticResource MarkaComboIndexConverter},UpdateSourceTrigger=Explicit}"
                                   ItemsSource="{Binding Markalar}" 
                                  HorizontalAlignment="Center" Grid.Column="1"></ComboBox>

        <ComboBox x:Name="monitorTiplerCombo" Grid.Row="1" MinWidth="80" 
                                VerticalAlignment="Center"  Margin="2,2"
                                SelectedItem="{Binding MonType,UpdateSourceTrigger=Explicit}"                                                                
                                HorizontalAlignment="Center" Grid.Column="1">

            <ComboBox.ItemsSource>
                <CompositeCollection>                    
                    <x:Static Member="sys:String.Empty" />
                    <CollectionContainer Collection="{Binding Source={StaticResource dataMonEnum}}"></CollectionContainer>
                </CompositeCollection>
            </ComboBox.ItemsSource>
        </ComboBox>

        <ComboBox x:Name="monitorTempestCombo" MinWidth="80" VerticalAlignment="Center"  Margin="2,2"
                                  SelectedIndex="{Binding Tempest,Converter={StaticResource TempestComboIndexConverter},Mode=OneWay,UpdateSourceTrigger=Explicit}"
                                  ItemsSource="{Binding TempestSeviyeler}" Grid.Row="5"
                                  HorizontalAlignment="Center" Grid.Column="1"></ComboBox>

        <TextBox VerticalAlignment="Center" Text="{Binding StokNo,UpdateSourceTrigger=Explicit}" 
                                 x:Name="monitorStokNoTextBox"
                                 Margin="4,2" Grid.Column="1" Grid.Row="2" ></TextBox>

        <TextBox VerticalAlignment="Center" x:Name="monitorSerialTextBox"
                                 Text="{Binding SerialNumber,UpdateSourceTrigger=Explicit}"  Margin="4,2" Grid.Column="1" Grid.Row="3" ></TextBox>
        <TextBox VerticalAlignment="Center" x:Name="monitorParcaNoTextBox"
                                 Text="{Binding Parca_no,UpdateSourceTrigger=Explicit}"  Margin="4,2" Grid.Column="1" Grid.Row="4" ></TextBox>
    </Grid>
</UserControl>
